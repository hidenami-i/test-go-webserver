[mysqld]
# 文字コード/照合順序の設定
character-set-server = utf8mb4
collation-server = utf8mb4_bin

# タイムゾーンの設定
default-time-zone = SYSTEM
log_timestamps = SYSTEM

# Linux Native AIO interfaceがM1向けに準備されていないのでoffにしておく。8.0系では自動的にoffになっているが、ログに出るので追加して消す
innodb-use-native-aio=0

# デフォルト認証プラグインの設定
authentication_policy=mysql_native_password

# sql_modeは8.0以降のデフォルト設定で十分なので特に指定はしない。
# MySQL 8.0 のデフォルトの SQL モードには、次のモードが含まれる: `ONLY_FULL_GROUP_BY`, `STRICT_TRANS_TABLES`, `NO_ZERO_IN_DATE`, `NO_ZERO_DATE`, `ERROR_FOR_DIVISION_BY_ZERO` および `NO_ENGINE_SUBSTITUTION`